    // Modelos C# para el detalle
    public class Oficina
    {
        public int iIdOficina { get; set; }
        public string vchNombre { get; set; } = string.Empty;
        public string vchDireccion { get; set; } = string.Empty;
        public string vchTelefono { get; set; } = string.Empty;
        public string vchEmail { get; set; } = string.Empty;
    }

    public class TramiteDetailModel
    {
        public int iIdTramite { get; set; }
        public string vchNombre { get; set; } = string.Empty;
        public string nvchDescripcion { get; set; } = string.Empty;
        public int iIdCategoria { get; set; }
        public bool bModalidadEnLinea { get; set; }
        public decimal mCosto { get; set; }
        public int iIdOficina { get; set; }
        public DateTime dtFechaCreacion { get; set; }
        public DateTime dtFechaActualizacion { get; set; }
        public bool bActivo { get; set; }
        public Oficina Oficina { get; set; } = new();

        public List<string>? Requisitos { get; set; }
        public List<string>? Pasos { get; set; }
        public string? TiempoEstimado { get; set; }
        public string? Vigencia { get; set; }
        public List<string>? DocumentosNecesarios { get; set; }
    }

    // Clase auxiliar para iconos de Lucide-React
    public static class Icon
    {
