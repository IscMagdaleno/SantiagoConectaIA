@inherits EngramaComponent

<EditForm Model="@Data.DocumentoSelected"
		  OnValidSubmit="OnSubmint">
	<DataAnnotationsValidator />

	<MudFocusTrap>

		<MudGrid>
			<MudItem sm="6">


				<MudTextField @bind-Value="@Data.DocumentoSelected.vchNombre"
							  Label="Nombre"
							  MaxLength="250"
							  Variant="Variant.Outlined" />


			</MudItem>
			<MudItem sm="6">
				<MudFileUpload T="IBrowserFile" FilesChanged="UploadFiles">
					<ActivatorContent>
						<MudButton Variant="Variant.Filled"
								   Color="Color.Primary"
								   StartIcon="@Icons.Material.Filled.CloudUpload">
							Cargar Archivo
						</MudButton>
					</ActivatorContent>
				</MudFileUpload>

				@if (Data.SelectedFile != null)
				{
					<MudText Typo="Typo.caption" Class="mt-2">
						Archivo Seleccionado: <b>@Data.SelectedFile.Name</b> (@((Data.SelectedFile.Size / 1024).ToString("N0")) KB)
					</MudText>

					@if (!string.IsNullOrEmpty(Data.DocumentoSelected.vchUrlDocumento))
					{
						<MudText Typo="Typo.caption" Color="Color.Success">
							URL Temporal: @Data.DocumentoSelected.vchUrlDocumento
						</MudText>
					}
				}

			</MudItem>
			<MudItem sm="6">
				<MudSwitch @bind-Value="Data.DocumentoSelected.bActivo"
						   Label="Activo"
						   Color="Color.Success" />


			</MudItem>
			<MudItem sm="12">
				<MudButton Variant="Variant.Filled"
						   ButtonType="ButtonType.Submit"
						   Color="Color.Secondary">Guardar Documento</MudButton>
			</MudItem>
		</MudGrid>
	</MudFocusTrap>
</EditForm>

